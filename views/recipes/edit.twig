{% extends "layouts/app.twig" %}

{% block body %}
	<div id="page-container">
		<div class="create-form-container">
			<form action="" method="POST" class="edit-create-form">
				<div class="form-content">
					{% for recipe in recipes %}
						<label class="recipe-label" for="recipe-name">Name</label>
						<input type="text" name="recipe-name" class="new-recipe-input" placeholder="New recipe" required value="{{recipe.name}}">
						<label class="recipe-label" for="recipe-kitchen">Kitchen</label>
						<select
							name="recipe-kitchen" class="new-recipe-input" required>
							{# <option value="{{recipe.kitchen_id}}" selected="selected" hidden>{{recipe.kitchen_id|capitalize}}</option> #}
							{% for kitchen in kitchens %}
								<option value="{{ kitchen.id }}">{{ kitchen.name }}</option>
							{% endfor %}
						</select>
						<label class="recipe-label" for="recipe-type">Type</label>
						<select name="recipe-type" class="new-recipe-input" required>
							<option value="{{recipe.type}}" selected="selected" hidden>{{recipe.type|capitalize}}</option>
							{% for type in types %}
								<option value="{{ type }}">{{ type }}</option>
							{% endfor %}
						</select>
						<label class="recipe-label" for="recipe-level">Level</label>
						<select name="recipe-level" class="new-recipe-input" required>
							<option value="{{recipe.level}}" selected="selected" hidden>{{recipe.level|capitalize}}</option>
							{% for level in levels %}
								<option value="{{ level }}">{{ level }}</option>
							{% endfor %}
						</select>
					{% endfor %}
				</div>
				<div class="submit-recipe-container">
					<a href="/recipe">Back</a>
					<input class="create-recipe-btn" type="submit" value="Edit">
				</div>
			</form>
		</div>
	</div>
{% endblock %}
